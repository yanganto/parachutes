#!/usr/bin/env bash
if [ "${1}" == "dual" ]; then
	echo "dual screan set up debug"
	# xrandr --output HDMI1 --mode 1920x1080 --left-of eDP1 --rotate normal
	xrandr --output HDMI-0 --mode 1920x1080 --left-of eDP-1-1
	exit 0
fi

if [ "${1}" == "vga" ]; then
	echo "dual screan set up"
    # HDMI to VGA only has 1024x768 resolution
	xrandr --output VGA1 --mode 1024x768 --left-of eDP1 --rotate normal
	exit 0
fi

if [ "${1}" == "dp" ]; then
	echo "dual screan set up"
	# xrandr --output eDP1 --pos 1920x1000 --output DP1 --pos 0x0 --mode 1920x1200 --rotate normal
	xrandr --output DP1 --mode 1920x1200 --right-of eDP1 --rotate normal
	exit 0
fi

if [ "${1}" == "fst" ]; then
	# xrandr --output VGA1 --mode 1920x1080 
	xrandr --output HDMI-0 --mode 2560x1440 --right-of eDP-1-1
	exit 0
fi

if [ "${1}" == "project" ]; then
	echo "dual screan set up"
	xrandr --output HDMI-1-1  --mode 1920x1080 --right-of eDP-1-1
	exit 0
fi

if [ "${1}" == "mirror" ]; then
	echo "mirror screan set up"
	xrandr --output HDMI-1-1 --mode 1920x1080 --same-as eDP1-1-1
	exit 0
fi

if [ "${1}" == "home" ]; then
    monitors=`xrandr --listmonitors | head -n 1 | awk -F':' '{print $2}' | sed -e 's/\s//'`;
    if [ "${monitors}" == "2" ]; then
        xrandr --output eDP-1-1 --mode 1920x1080 --pos 1080x1080 \
                --output HDMI-1-1 --mode 1920x1080 --rotate left --pos 0x0
    elif [ "${monitors}" == "3" ]; then
        xrandr --output eDP-1-1 --mode 1920x1080 --pos 1080x1080 \
                --output HDMI-0  --mode 1920x1080 --pos 3000x1080 --rotate normal \
                --output HDMI-1-1 --mode 1920x1080 --rotate left --pos 0x0
    else
        xrandr --output eDP-1-1 --mode 1920x1080 --pos 1080x1080 \
                --output HDMI-0  --mode 1920x1080 --pos 3000x1080 --rotate normal \
                --output DP-1 --mode 1920x1080 --rotate inverted --pos 3960x0 \
                --output HDMI-1-1 --mode 1920x1080 --rotate left --pos 0x0
    fi
	exit 0
fi

echo "monitor [profile]"
echo "profile=dual, project, vga, dp, fst, home, mirror"
