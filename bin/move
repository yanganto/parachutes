#!/usr/bin/env bash
#           H4
#   H1 H2 H3
if [ "${1}" == "H1" ]; then
    xdotool mousemove --sync 540 960 click 1 sleep 0.1
fi
if [ "${1}" == "H2" ]; then
    xdotool mousemove --sync 2040 1620 click 1 sleep 0.1
fi
if [ "${1}" == "H3" ]; then
    xdotool mousemove --sync 3960 1620 click 1 sleep 0.1
fi
if [ "${1}" == "H4" ]; then
    xdotool mousemove --sync 4920 540 click 1 sleep 0.1
fi

#  O1 O2
if [ "${1}" == "O1" ]; then
    xdotool mousemove --sync 1280 720 click 1 sleep 0.1
fi
if [ "${1}" == "O2" ]; then
    xdotool mousemove --sync 3520 540 click 1 sleep 0.1
fi

find-cursor -c '#b5bd68' -w 500 -s 250 -d 50 -l 5
